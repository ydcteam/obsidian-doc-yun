	mkdir -p /d/obsidianVaults/build_dev/.obsidian/plugins/obsidian-publish-to-ydc-yun && \
	cp -f ./dist/obsidian-publish-to-ydc-yun/main.js /d/obsidianVaults/build_dev/.obsidian/plugins/obsidian-publish-to-ydc-yun/main.js && \
